{
  "manifest_version": 3,
  "name": "Focus App",
  "version": "1.0",
  "description": "A simple Pomodoro timer with a fullscreen video background.",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
